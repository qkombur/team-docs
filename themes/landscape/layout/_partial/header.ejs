<header id="header">
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo">
        <%= site.data.frontpage.title %>
      </h1>
      <% if (site.data.frontpage.subtitle){ %>
        <h2 id="subtitle">
          <%= site.data.frontpage.subtitle %>
        </h2>
      <% } %>
      <p><%= site.data.frontpage.description %></p>
    </div>
  </div>
</header>
<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('recent_posts') %></h3>
    <div class="widget">
      <ul>
        <% site.posts.each(function(post){ %>
          <li>
            <a class="sidebar-link" href="<%- url_for(post.path) %>">
              <h3 class="sidebar-header"><%= post.title || '(no title)' %></h3>
              <p class="sidebar-description"><%= post.description || '(no excerpt)'%></p>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>